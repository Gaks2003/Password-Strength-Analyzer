{
  "name": "password-strength-analyzer",
  "version": "1.0.0",
  "description": "A sophisticated web-based password strength analyzer with advanced security assessment",
  "main": "index.html",
  "scripts": {
    "start": "npx serve .",
    "dev": "npx serve . --listen 3000",
    "build": "echo 'No build step required for static site'",
    "deploy": "gh-pages -d .",
    "test": "npm run lint && npm run validate",
    "lint": "npm run lint:html && npm run lint:css && npm run lint:js",
    "lint:html": "htmlhint index.html",
    "lint:css": "stylelint styles.css",
    "lint:js": "eslint script.js",
    "validate": "node -c script.js && echo 'Validation passed'",
    "audit": "npm audit --audit-level moderate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/password-strength-analyzer.git"
  },
  "keywords": [
    "password",
    "security",
    "analyzer",
    "strength",
    "entropy",
    "cybersecurity",
    "web-app",
    "javascript",
    "html5",
    "css3"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/password-strength-analyzer/issues"
  },
  "homepage": "https://your-username.github.io/password-strength-analyzer",
  "devDependencies": {
    "gh-pages": "^6.0.0",
    "serve": "^14.2.1",
    "htmlhint": "^1.1.4",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "eslint": "^8.57.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}